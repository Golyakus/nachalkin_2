<?php
namespace app\utils;

abstract class ButtonTaskType extends TaskType
{


	public function makeBehavior()
	{
		return new \app\behaviors\InputTaskBehavior();
	}

	
	protected function getHtmlAnswerType() { return $this->getType(); }
	protected function processAnswerElement(\SimpleXMLElement $elem, $action)
	{
		parent::ProcessAnswerElement($elem, $action);
		$name = $this->title;
		$t = $this->getHtmlAnswerType();
		$retval = "<input type=\"$t\" ";
		if ($this->correct && $action == TaskType::RENDER_VIEW_ACTION) 
			$retval .= "checked ";
		$retval .= " name=\"$name\">" . $elem;
		\Yii::trace($retval, "Generated for button list");
		echo $retval;
		return false;
	}
	function __construct()
	{
		parent::__construct();
		$this->endElement['ans-element'] = function($self, $elem, $action) {
			echo '</input><br>';
		};
	}
}

?>


